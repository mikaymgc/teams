<%= render "shared/header" %>

<h1>メンバー登録</h1>

<%= form_with model: @member, url: team_members_path, local: true do |f| %>
  <div>
    <p>名前(必須)</p>
    <%= f.text_area :name, placeholder:"名前を入力", class:"form-control" %>
  </div>

  <div>
    <p>生年月日</p>
    <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1950,
                      end_year: (Time.now.year - 10),
                      date_separator: '%s'),
                    "年", "月") + "日" %>
  </div>

  <div>
    <p>電話番号</p>
    <%= f.text_field :phone_number, placeholder:"例）09012345678",class:"form-control",maxlength:"11"%>
  </div>

  <div>
    <p>性別</p>
    <%= f.collection_select(:gender_id, Gender.all, :id, :name, {}, {class:"form-select"}) %>
  </div>

  <div>
    <p>技術等級</p>
    <%= f.collection_select(:technical_grade_id, TechnicalGrade.all, :id, :name, {}, {class:"form-select"}) %>
  </div>

  <div>
    <p>審判資格</p>
    <%= f.collection_select(:referee_grade_id, RefereeGrade.all, :id, :name, {}, {class:"form-select"}) %>
  </div>

  <div>
    <p>審判員期限</p>
    <%= raw sprintf(
                    f.date_select(
                      :referee_deadline,
                      use_month_numbers: true,
                      discard_day: true,
                      class:"form-select",
                      prompt:'--',
                      start_year: 2020,
                      end_year: (Time.now.year + 10),
                      date_separator: '%s'),
                    "年") +"月"%>
  </div>

  <div>
    <p>保険加入</p>
    <%= f.collection_select(:insurance_id, Insurance.all, :id, :name, {}, {class:"form-select"}) %>
  </div>

  <div>
    <%= f.submit "メンバー登録" ,class:"btn btn-primary" %>
  </div>
<% end %>