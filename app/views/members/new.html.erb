<div class="member-register">
  <%= form_with model: @member, local: true do |f| %>
  <div class="#">
      <%= f.text_area :name, class:"#", id:"team_name", placeholder:"名前", maxlength:"40" %>

    <div class="#">
      <div class="#">
        <label class="form-text">生年月日</label>
        <span class="indispensable">必須</span>
      </div>
      <div class='input-birth-wrap'>
        <%= raw sprintf(
                    f.date_select(
                      :birthday,
                      class:'select-birth',
                      id:"birthday",
                      use_month_numbers: true,
                      prompt:'--',
                      start_year: 1950,
                      end_year: (Time.now.year - 10),
                      date_separator: '%s'),
                    "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
      </div>
    </div>
    <%= f.submit "メンバー登録"%>
  </div>
  <% end %>
</div>