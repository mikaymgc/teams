<!DOCTYPE html>
<html>
  <head>
    <title>Teams</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
    />
  </head>

  <header>
  <nav class="navbar navbar-dark bg-dark">
    <a class="navbar-brand" href="/" >TEAM'S</a>
    <% if user_signed_in? %>
      <ul class='lists-right'>
        <li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete, class: "btn btn-outline-light", id:"list" %></li> 
      </ul>
    <% else %>
      <ul class='lists-right'>
        <li><%= link_to 'ログイン',new_user_session_path, class: "btn btn-outline-light", id:"list" %></li> 
        <li><%= link_to '新規登録',new_user_registration_path, class: "btn btn-outline-light", id:"list" %></li> 
      </ul>
    <% end %>
  </nav>
</header>

  <body>
    <%= yield %>
  </body>
</html>
